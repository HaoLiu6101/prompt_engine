{
  "package": {
    "productName": "Prompt Engine",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build",
    "devPath": "../dist",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": false,
        "close": true,
        "create": true,
        "hide": true,
        "show": true,
        "setFocus": true
      },
      "clipboard": {
        "all": false,
        "writeText": true
      }
    },
    "bundle": {
      "identifier": "com.example.promptengine",
      "active": true,
      "targets": ["app", "dmg"]
    },
    "windows": [
      {
        "title": "Prompt Engine",
        "width": 1280,
        "height": 880,
        "minWidth": 1080,
        "minHeight": 720,
        "center": true,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true
  }
}
